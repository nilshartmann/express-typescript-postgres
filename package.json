  "scripts": {
    "start": "nodemon",
    "tsc": "rimraf dist/ && tsc",
    "prettier": "prettier --print-width 130 --write \"src/**/*.ts\"",
    "docker:build": "docker build -t greeting-app:v1 .",
    "docker:run": "docker run -e DEBUG=* -p 7777:3000 -d --name greeting-app-container_v1 greeting-app:v1",
    "docker:logs": "docker logs greeting-app-container_v1",
    "docker:stop": "docker stop -t 1 greeting-app-container_v1 && docker rm -f greeting-app-container_v1"
  },
  "devDependencies": {
    "nodemon": "^1.11.0",
    "prettier": "^1.5.3",
    "rimraf": "^2.6.1",
    "ts-node": "^3.3.0"
  },
  "dependencies": {
    "@types/body-parser": "^1.16.4",
    "@types/debug": "^0.0.30",
    "@types/express": "^4.0.36",
    "@types/morgan": "^1.7.32",
    "body-parser": "^1.17.2",
    "debug": "^3.0.0",
    "express": "^4.15.4",
    "morgan": "^1.8.2",
    "typescript": "2.3"
  }
}
